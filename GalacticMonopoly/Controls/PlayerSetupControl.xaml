<!-- Controls/PlayerSetupControl.xaml -->
<UserControl x:Class="Controls.PlayerSetupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="100" Width="700" Margin="5">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
        <Image x:Name="AvatarImage" Width="64" Height="64" Margin="10"/>
        <TextBox x:Name="NameBox" Width="200" Margin="30" Text="Player"/>
        <Button Content="Wybierz avatar"  Click="SelectAvatar_Click" Height="25"/>
    </StackPanel>
</UserControl>
